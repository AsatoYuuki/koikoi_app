.block.horizontal-padding-25
  .block__menu
    住所入力
.block.horizontal-padding-25
  = form_with model: @address, url:  user_registration_path,method: :post, id: 'new_address', class: 'new_address', local: true do |f|
    .input-field
      .input-field-main
        = f.label :post_number, "郵便番号"
        %span.required-true
          必須
        %br
        = f.text_field :post_number,  placeholder: "例）123-4567"
        - @address.errors.full_messages_for(:post_number).any?
        .errors_messages
        =  render partial: 'error_address', locals: { address: @address, column: "post_number"}
    .input-field
      .input-field-main
        = f.label :prefecture, "都道府県"
        %span.required-true
          必須
        %br
        = f.collection_select :prefecture, Prefecture.all, :id , :name,{prompt: "--"}
        - @address.errors.full_messages_for(:prefecture).any?
        .errors_messages
        =  render partial: 'error_address', locals: { address: @address, column: "prefecture"}
    .input-field
      .input-field-main
        = f.label :city, "市区町村"
        %span.required-true
          必須
        %br
        = f.text_field :city,  placeholder: "例）横浜市緑区"
        - @address.errors.full_messages_for(:city).any?
        .errors_messages
        =  render partial: 'error_address', locals: { address: @address, column: "city"}
    .input-field
      .input-field-main
        = f.label :address, "番地"
        %span.required-true
          必須
        %br
        = f.text_field :address,  placeholder: "例）青山1-1-1"
        - @address.errors.full_messages_for(:address).any?
        .errors_messages
        =  render partial: 'error_address', locals: { address: @address, column: "address"}
    .input-field
      .input-field-main
        = f.label :building_name, "建物名"
        %span.required-false
          任意
        %br
        = f.text_field :building_name, placeholder: "例）柳ビル103"
        - @address.errors.full_messages_for(:building_name).any?
        .errors_messages
        =  render partial: 'error_address', locals: { address: @address, column: "building_name"}
    .input-field
      .input-field-main
        = f.label :phone_number, "電話番号"
        %span.required-false
          任意
        %br
        = f.text_field :phone_number, placeholder: "例）09012345678"
        - @address.errors.full_messages_for(:phone_number).any?
        .errors_messages
        =  render partial: 'error_address', locals: { address: @address, column: "phone_number"}
    = f.submit "次へ進む", class:"button back-red font-white"
